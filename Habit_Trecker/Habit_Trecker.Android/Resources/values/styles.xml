<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="MainTheme" parent="MainTheme.Base">
    <item name="colorPrimary">#ba663ABA</item>
    <item name="android:colorPrimaryDark">#ba663ABA</item>
	  <item name="android:windowActionBar">true</item>
	  <item name="android:windowFullscreen">true</item>
      <item name="colorAccent">#E5BD30</item>
	  <!-- активное состояние (30% прозрачности для фона) -->
	  <item name="colorControlActivated">#E5BD30</item>
	  <!-- неактивное состояние ползунка -->
	  <item name="colorSwitchThumbNormal">#bfb3c7</item>

	  <!-- цвет дорожки для неактивного состояния (30% прозрачности) -->
	  <item name="android:colorForeground">#63566b</item>
	  <item name="android:windowBackground">@drawable/gradient</item>
  </style>
	<style name="MyTheme.Splash" parent ="Theme.AppCompat.Light.NoActionBar">
		<item name="android:windowBackground">@drawable/splashscreen</item>
		<item name="android:windowNoTitle">false</item>
		<item name="android:windowFullscreen">true</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:windowActionBar">true</item>
	</style>
</resources>