            <Image Source="Resources/image2.png"  Margin="8, 6" VerticalOptions="StartAndExpand"/>
            <Label Text="Привычки" FontSize="24" FontFamily="Roboto" TextColor="Black" FontAttributes="Bold"/>
        </StackLayout>
        <StackLayout>
            <Label x:Name="labelDate" Text="Июнь 2023" FontFamily="Roboto" FontSize="18" TextColor="#616161" 
                   FontAttributes="Bold" Margin="28, 0"/>
