<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Habit_Tracker.MainPage">

    <StackLayout BackgroundColor="#F5F5F5">
        <StackLayout Margin="0, 0" Orientation="Horizontal">
            <Image Source="Resources/image2.png"  Margin="8, 6" VerticalOptions="StartAndExpand"/>
            <Label Text="Habit Doodle " FontSize="24" FontFamily="Mochiy pop one" TextColor="Black" FontAttributes="Bold"/>
        </StackLayout>
        <StackLayout>
            <Label x:Name="labelDate" Text="" FontFamily="Roboto" FontSize="18" TextColor="#616161" 
                   FontAttributes="Bold" Margin="28, 0"/>
        </StackLayout>
        <Button x:Name="AddButton" Text="+"
                FontAttributes="Bold"
                FontSize="35"
                BackgroundColor="#663ABA"
                CornerRadius="300"
                VerticalOptions="EndAndExpand"
                HorizontalOptions="EndAndExpand"
                WidthRequest="50"
                HeightRequest="50"
                Clicked="OnButtonClicked"/>
    </StackLayout>
    
</ContentPage>
