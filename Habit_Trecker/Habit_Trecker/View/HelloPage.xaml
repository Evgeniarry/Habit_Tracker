<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Habit_Tracker.HelloPage"
             NavigationPage.HasNavigationBar="false"
             BackgroundImageSource="@drawable/backgroundHello">
    
    <ContentPage.Content>
        <StackLayout>
            <Image Source="@drawable/labeldood"
                   HeightRequest="300"
                   WidthRequest="300"
                   HorizontalOptions="CenterAndExpand"
                   VerticalOptions="CenterAndExpand"/>
            <Frame Margin="45,0,45,45" CornerRadius="20"
                   Padding="0" HasShadow="True">
            <Button Text="Начать"
                    
                    TextColor="#EBE6DB"
                    FontSize="30"
                    FontAttributes="Bold"
                    FontFamily="Open Sans"
                   Clicked="Button_Clicked"
                   BackgroundColor="#f0E10D0D"
                   CornerRadius="20"
                   HeightRequest="55"
                   VerticalOptions="Start"/>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>