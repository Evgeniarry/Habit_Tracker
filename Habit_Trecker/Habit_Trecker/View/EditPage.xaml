<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Habit_Tracker.View.EditPage"
             Title="Изменение привычки">
    <StackLayout Margin="15">
        <Entry x:Name="NameHabit" 
               Placeholder="Название привычки"
               Text="{Binding Name}"
               PlaceholderColor="#8d7999"
               TextColor="#63566b" 
               FontAttributes="Bold"/>
        <Editor x:Name="Description" 
                Placeholder="Описание привычки" 
                HeightRequest="150"
                Text="{Binding Description}"
                PlaceholderColor="#8d7999"
                TextColor="#63566b" 
                FontAttributes="Bold"/>

        <Button BackgroundColor="#00000000"
                Margin="0,0,180,0"
                ImageSource="done" 
                Text="Сохранить" 
                TextColor="#63566b"
                Clicked="SaveHabitButton"/>

        <Button BackgroundColor="#00000000"
                ImageSource="trash"
                Margin="0,0,180,0"
                Text="Удалить"
                TextColor="#63566b"
                Clicked="DeliteHabitButton"/>
    </StackLayout>
</ContentPage>